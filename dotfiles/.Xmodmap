! change Caps_Lock to Escape / Caps_Lock when held together with Shift
remove Lock = Caps_Lock
keysym Caps_Lock = Escape Caps_Lock

! change Caps_Lock to Hyper_L / Caps_Lock when held together with Shift
remove Mod4 = Hyper_L
add Mod3 = Hyper_L
keysym Caps_Lock = Hyper_L Caps_Lock

